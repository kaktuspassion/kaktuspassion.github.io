---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-2xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">This is Haonan Chen</div>
    <div class="text-2xl py-3 font-bold">Computational Linguist and AI Learner ï½œ University of Zurich</div>
    <div class="py-2">
      <text class="text-lg">
        I'm documenting my projects and learning blogs in this portfolio website. Currently I'm pursuing my Master's 
        degree in Digital Linguistics in University of Zurich. 
        Prior to this, I received my BA in Polish in Beijing Foregn Studies Univeristy. 
        I'm also a multilingual learner and an AI product passionist. 
        In my peronal life, I enjoy staying active through body combat, yoga and hiphop, and I love cooking and watching movies.
        Hope you know more about me though this web and find something useful! ðŸ¤©
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="haonan.chen@uzh.ch" target="_blank"> Contact me!</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects</div>
  </div>

  <HorizontalCard
    title="WordWizard - Multilingual Crossword Game"
    img="/project_wordwizard/main.webp"
    desc="2023 Fall, Web Application and Language Technology"
    url="https://github.com/kaktuspassion/MultilingualCrosswordGame"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Rhythmic Variability in Swiss German Dialects"
    img="/project_rhythmic1/main.png"
    desc="2023 Fall, Computational Processing of Speech Rhythm for Language and Speaker Classification"
    url="https://github.com/kaktuspassion/rhythmic_variability_in_swiss_dialects"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Rhythmic Variability Between Young and Old Age Groups"
    img="/project_rhythmic2/main.png"
    desc="2023 Fall, Computational Processing of Speech Rhythm for Language and Speaker Classification"
    url="https://github.com/kaktuspassion/rhythmic_variability_with_age"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Comparison of the Performance of Whisper ASR and Human on Transcription Task of whispered Mandarin Speech"
    img="/project_whisper/main.png"
    desc="2023 Fall, Automatic Speech Processing"
    url="https://github.com/kaktuspassion/whisper_vs_hsr"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
